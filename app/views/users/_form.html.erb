<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <%= f.fields_for :preferences do |p| %>
  <p>
    <%= p.label :theme %><br>
    <%= p.select :theme, options_for_select(User.valid_themes, "edit".eql?(action_name) ? @user.preferences["theme"] : "Light" ), { include_blank: true } %>
  </p>

  <p>
    <%= p.label :currency %><br>
    <%= p.select :currency, options_for_select(User.valid_currencies,  "edit".eql?(action_name) ? @user.preferences["currency"] : "USD"), { include_blank: true } %>
  </p>

  <p>
    <%= p.label :language %><br>
    <%= p.select :language, options_for_select(User.valid_languages,  "edit".eql?(action_name) ? @user.preferences["language"]  : "US English"), { include_blank: true } %>
  </p>
  <% end %>
  <%= f.submit :class => "btn btn-success" %>
<% end %>
